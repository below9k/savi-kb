@import nib
#adminTabs
    width 100%
    span
        padding 1em
        background-color #3c3c3c
        display inline-block
        color #888
    .selectedTab
        background-color #d7d7d7
        color #222
        text-decoration underline
#user-manager
    width 100%
    background-color #d7d7d7
    padding 7px
    div.dealers,div.users
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content flex-start
        article
            position relative
            box-shadow 5px 5px 5px #888
            flex 1 (25% - 4em)
            margin-right 1em
            margin-bottom 1em
            padding-bottom 5em
            background-color #777
            &:nth-child(4n)
                margin-right 0
            &:last-child
                margin-right 0
            +below(600px)
                flex 1 100%
                margin-right 0
            h2
                padding 1em
                color #FFF
                font-size 1em
                margin 0
            .controls
                position absolute
                bottom 1em
                margin 0
                width 100%
                text-align center
            label
                margin 0 0.5em
            input
                display none
                width 90%
                margin 0 1em
            textarea
                display none
                width 90%
                margin 0 1em
            p
                border 1px solid #777
                padding 1px
                &:nth-child(n+2)
                    margin 0 1em
                    padding 4px
                    &:after
                        font-family 'FontAwesome'
                        content '\f044'
                        color #777
                    &:hover
                        color #000
                        border 1px solid #777
                        &:after
                            color #FFF
    div.users
        article
            h2
                background-color #26545C
    div.dealers
        article
            h2
                background-color #111